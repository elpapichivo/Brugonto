

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context="com.example.yanina.mysong.View.DetalleFragment">




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Discografia"
        android:textColor="#f7f5f5"
        android:gravity="center"
        android:textSize="20dp"
        android:background="#0e034b"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:id="@+id/recyclerAlbum"
        android:background="#000000"
        ></android.support.v7.widget.RecyclerView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:paddingTop="20dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/izquierda"
        android:layout_gravity="left"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:textColor="#f7f3f3"
        android:id="@+id/textViewNombre"
        />

    <ImageView
        android:paddingTop="20dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/derecha"
        android:layout_gravity="right"/>

    </FrameLayout>

</LinearLayout>
